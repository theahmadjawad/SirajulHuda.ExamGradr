<%- include("partials/header") %>
    <%- include("partials/navbar") %>



        <section class=" section--padding ">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="">
                            <div class="card-body">
                                <div class="card-headline">
                                    <%= exam.name %>
                                </div>
                                <p>
                                    <%- exam.description %>
                                </p>
                                <div class="card-subtitle">
                                    Instructions
                                </div>
                                <p>
                                    <%- exam.instruction %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title">
                                    Enter your Details
                                </div>
                                <form action="/exam/enroll" method="POST">
                                    <input type="hidden" name="examId" value="<%= exam._id %>">
                                    <div class="form-group">
                                        <label for="">Name</label>
                                        <input type="text" name="name" class="form-control input-text" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Phone No.</label>
                                        <input type="text" name="phone" class="form-control input-text" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Place</label>
                                        <input type="text" name="place" class="form-control input-text" required>
                                    </div>
                                    <button class="btn-pr w-100">Attend Exam</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include("partials/footer") %>